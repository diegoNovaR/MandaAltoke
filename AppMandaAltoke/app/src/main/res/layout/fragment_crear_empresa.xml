<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    tools:context=".CrearEmpresaFragment">

    <!-- Título -->
    <TextView
        android:id="@+id/txtTituloCrear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Crear Empresa"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- Mensaje contextual -->
    <TextView
        android:id="@+id/txtDescripcionCrear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registra tu empresa para empezar a gestionar envíos, novedades y pedidos en distintas ciudades del Perú."
        android:textColor="#444"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="28dp"
        app:layout_constraintTop_toBottomOf="@id/txtTituloCrear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- Nombre de empresa -->
    <EditText
        android:id="@+id/edtNombreEmpresa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre de la Empresa"
        android:padding="14dp"
        android:background="@android:drawable/edit_text"
        app:layout_constraintTop_toBottomOf="@id/txtDescripcionCrear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- RUC -->
    <EditText
        android:id="@+id/edtRuc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="RUC (opcional)"
        android:inputType="number"
        android:padding="14dp"
        android:background="@android:drawable/edit_text"
        app:layout_constraintTop_toBottomOf="@id/edtNombreEmpresa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Correo -->
    <EditText
        android:id="@+id/edtCorreoEmpresa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Correo Empresarial"
        android:inputType="textEmailAddress"
        android:padding="14dp"
        android:background="@android:drawable/edit_text"
        app:layout_constraintTop_toBottomOf="@id/edtRuc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Contraseña -->
    <EditText
        android:id="@+id/edtContrasenaEmpresa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:padding="14dp"
        android:background="@android:drawable/edit_text"
        app:layout_constraintTop_toBottomOf="@id/edtCorreoEmpresa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp" />

    <!-- Botón registrar -->
    <Button
        android:id="@+id/btnRegistrarEmpresa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar Empresa"
        android:padding="14dp"
        android:backgroundTint="#43A047"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/edtContrasenaEmpresa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
